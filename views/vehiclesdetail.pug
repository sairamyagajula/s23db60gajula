extends layout

block content
    h1= title
    if (toShow == null)
     h2 No instance to display
    else
    - let vehiclesid = toShow._id
    - let vehicles_name = toShow.name
    - let vehicles_mileage = toShow.mileage
    - let vehicles_color = toShow.color
    div.container
        div.row
        div.col-md-6
            div.card
            div.card-body
            div.row.mb-2
            div.col-sm-6.vehiclesAttr Vehicles ID is:
            div.col-sm-6 #{vehiclesid}
            div.row.mb-2
            div.col-sm-6.vehiclesAttr Vehicles Name is:
            div.col-sm-6 #{vehicles_name}
            div.row.mb-2
            div.col-sm-6.vehiclesAttr Vehicles Mileage is:
            div.col-sm-6 #{vehicles_mileage}
            div.row.mb-2
            div.col-sm-6.vehiclesAttr Vehicles Color is:
            div.col-sm-6 #{vehicles_color}